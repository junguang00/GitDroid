<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="feicuiedu.com.gitdroid"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".GitDroidApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".main.MainActivity"
            android:label="@string/label_main"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".github.login.LoginActivity"
            android:label="@string/login_github"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".github.repo.RepoInfoActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
